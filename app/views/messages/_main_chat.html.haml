.main-chat
  .main-chat__group-info
    .main-chat__group-info__left
      .main-chat__group-info__left__name
        = @group.name
      .main-chat__group-info__left__members
        Member : 
        .main-chat__group-info__left__member
          - @group.users.each do |member|
            = member.name
        
        
    .main-chat__group-info__right
      = link_to edit_group_path(@group),class:"main-chat__group-info__right--btn" do
        Edit

  .main-chat__message-list
    = render @messages

  

